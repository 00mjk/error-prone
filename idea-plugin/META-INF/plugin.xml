  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <extensions defaultExtensionNs="com.intellij">
      <java.compiler implementation="com.google.errorprone.intellij.ErrorProneIdeaCompiler"/>
